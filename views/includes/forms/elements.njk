{% macro input(name, label = '', type = 'text', classes = '', placeholder = '', helptext = '', value = '') %}

    <div class="field {{classes}}">

        <div class="control">
            <label class="label">
                {{label}}

            </label>
            <input type="{{type}}" name="{{name}}" class="input is-small" placeholder="{{placeholder}}"/>
        </div>
        <p class="help">
            {{helptext}}
        </p>
    </div>

{% endmacro %}